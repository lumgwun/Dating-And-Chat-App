<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/app_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:padding="4dp"
            android:src="@drawable/ic_chevron"
            app:tint="@color/black"

            />

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:outlineSpotShadowColor="@color/transparent"
            app:cardCornerRadius="500dp"
            tools:ignore="UnusedAttribute">

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_model" />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="Mimi Brown"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/gilroy_regular"
                    android:gravity="center"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    tools:text="24" />

                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="7dp"
                    android:src="@drawable/ic_official" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ellipsize="end"
                android:fontFamily="@font/gilroy_regular"
                android:gravity="center"
                android:maxLines="1"
                android:text="Dubai"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btn_video_call"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_video_call"
            app:tint="@color/black"

            />

        <ImageView
            android:id="@+id/btn_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/black"

            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cornered_rect_10"
                    android:backgroundTint="@color/bg_chat_messages"
                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:id="@+id/msg_chat"
                    android:text="Hey there, How are you doing?"
                    android:textColor="@color/gray_dark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:id="@+id/msg_time"
                    android:text="11:42 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_cornered_rect_10"
                    android:backgroundTint="@color/bg_chat_messages"
                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/my_chat_msg"
                    android:paddingVertical="10dp"
                    android:text="How is everything going.."
                    android:textColor="@color/gray_dark"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:id="@+id/my_chat_time"
                    android:paddingVertical="10dp"
                    android:text="11:42 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_regular"
                    android:gravity="end"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="11:42 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradiant_10"
                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Hey there, do you still remember me ?"
                    android:textColor="@color/gray_dark"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#e0e0e0"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_cornered_rect_10"
                        android:backgroundTint="@color/bg_chat_messages"
                        android:fontFamily="@font/gilroy_regular"
                        android:lineSpacingExtra="3dp"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="10dp"
                        android:text="How can i forget you..!
I have the photograph, which was
taken when we met lasttime..! ðŸ’–"
                        android:textColor="@color/gray_dark"
                        android:textSize="15sp" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="1:42 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

            </LinearLayout>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="15dp"
                android:background="@drawable/rect6h"
                android:backgroundTint="@color/bg_chats"
                android:fontFamily="@font/gilroy_regular"
                android:paddingHorizontal="40dp"
                android:paddingVertical="8dp"
                android:text="Today"
                android:textColor="@color/gray_dark"
                android:textSize="11sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/gilroy_regular"
                    android:gravity="end"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="10:00 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradiant_10"
                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="Wow,\nCan you share that to me please?"
                    android:textColor="@color/gray_dark"
                    android:textSize="15sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:gravity="center_vertical"

                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp">

                    <androidx.cardview.widget.CardView

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:scaleType="centerCrop"
                            android:src="@drawable/img_model" />


                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/gilroy_regular"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:text="1:42 am"
                    android:textColor="@color/gray_light"
                    android:textSize="12sp" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_cornered_rect_20"
            android:backgroundTint="@color/bg_chats"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_massage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/bg_cornered_rect_20"
                android:backgroundTint="@color/bg_chats"
                android:fontFamily="@font/gilroy_medium"
                android:hint="@string/write_here"
                android:imeOptions="actionGo"
                android:maxLines="5"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp"
                android:scrollbars="vertical"
                android:textColor="@color/gray_dark"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/btn_send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:layout_marginVertical="4dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg_gradiant_500"
                android:paddingVertical="11dp"
                android:paddingStart="12dp"
                android:paddingEnd="11dp"
                android:src="@drawable/ic_send" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btn_add"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="15dp"
            android:src="@drawable/ic_add_media"
            app:tint="@color/black"
            android:layout_marginBottom="12dp"

            />

        <ImageView
            android:id="@+id/btn_camera"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="12dp"
            android:src="@drawable/ic_camera"
            app:tint="@color/black" />


    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>